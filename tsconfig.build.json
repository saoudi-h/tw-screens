{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "noEmit": false,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "declarationDir": "dist/types",
        "declaration": true,
        "emitDeclarationOnly": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "baseUrl": ".",
        "rootDir": "src",
        "importHelpers": true,
        "isolatedModules": true,
        "sourceMap": false,
        "declarationMap": false
    },
    "include": ["./src/**/*"],
    "exclude": [
        "dist",
        "build",
        "node_modules",
        ".vscode",
        ".turbo",
        "scripts",
        "docs",
        "__tests__"
    ]
}
