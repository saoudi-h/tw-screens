{
  "name": "tw-screens",
  "version": "1.0.0",
  "description": "React hooks for using Tailwind CSS breakpoints easily and efficiently.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "format": "prettier --write \"{src,__tests__}/**/*.{ts,tsx,md,js,jsx}\"",
    "lint": "eslint \"{src,__tests__}/**/*.{ts,tsx,md,js,jsx}\"",
    "lint:fix": "eslint \"{src,__tests__}/**/*.{ts,tsx,md,js,jsx}\" --fix",
    "clean": "del-cli node_modules dist",
    "prepare": "pnpm run build",
    "prepublishOnly": "pnpm run test && pnpm run lint",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "doc": "typedoc"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/saoudi-h/tw-screens.git"
  },
  "keywords": [
    "react",
    "tailwindcss",
    "breakpoints",
    "hooks",
    "responsive",
    "media-query",
    "typescript",
    "pnpm"
  ],
  "author": "Votre Nom",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/saoudi-h/tw-screens/issues"
  },
  "homepage": "https://github.com/saoudi-h/tw-screens#readme",
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@types/react": "^18.2.0",
    "@vitest/coverage-v8": "2.1.3",
    "del-cli": "^6.0.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "globals": "^15.11.0",
    "jsdom": "^25.0.1",
    "prettier": "3.3.3",
    "react": "18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.2.0",
    "tsup": "^8.3.4",
    "typedoc": "^0.26.10",
    "typedoc-plugin-markdown": "^4.2.9",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.11.0",
    "vitest": "^2.1.3"
  },
  "peerDependencies": {
    "react": "^18"
  }
}